@model UserManagement.Web.Models.LoginModel
@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    var message = ViewBag.Message;
}

<section class="w-100 p-4 d-flex justify-content-center pb-4">
    <form class="login-form" asp-controller="Account" asp-action="Login" id="loginform" method="post">
        @if (string.IsNullOrEmpty(message) == false)
        {
            <div class="alert alert-danger" role="alert">@message</div>
        }
        <div class="form-group mb-3">
            <label class="mb-1" for="exampleInputEmail1">Email address</label>
            <input type="email" asp-for="EmailAddress" class="form-control" placeholder="Enter email" />
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="mb-1" for="exampleInputPassword1">Password</label>
            <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Sign In</button>
    </form>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}