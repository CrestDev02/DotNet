@model List<UserManagement.Database.Entity.DataAccess.DTOs.UserResultModel>
@{
    ViewData["Title"] = "User Page";
}

<div class="text-center">
    <div class="alert alert-success d-none" role="alert" id="successMessage"></div>
    <div class="alert alert-danger d-none" role="alert" id="errorMessage"></div>
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h4>Users</h4>
        <a asp-controller="User" asp-action="Details" asp-route-id="0" class="btn btn-sm btn-primary">Add User</a>
    </div>
    <table class="table table-sm">
        <thead class="thead-light">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Frist Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <th scope="row">@user.Id</th>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.PhoneNumber</td>
                    <td>
                        <a asp-controller="User" asp-action="Details" asp-route-id=@user.Id class="btn btn-sm btn-primary mr-2">Edit</a>
                        <button class="btn btn-sm btn-danger" onclick="deleteUser(@user.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/custom.js"></script>
}